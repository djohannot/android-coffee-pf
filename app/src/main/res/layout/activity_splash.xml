<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="center">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/pattern" />

    <LinearLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="@dimen/splash_logo_size"
            android:layout_height="@dimen/splash_logo_size"
            android:src="@drawable/logo" />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/google_margin_vertical"
            android:layout_marginRight="@dimen/google_margin_vertical"
            android:layout_marginTop="@dimen/splash_google_top_margin"
            android:visibility="gone" />

        <TextView
            android:id="@+id/sign_in_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/google_margin_vertical"
            android:layout_marginRight="@dimen/google_margin_vertical"
            android:layout_marginTop="@dimen/splash_desc_top_margin"
            android:fontFamily="sans-serif"
            android:text="@string/login_desc"
            android:textAlignment="center"
            android:textColor="@color/dark"
            android:textSize="@dimen/splash_desc_font_size"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>