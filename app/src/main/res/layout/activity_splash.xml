<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="center">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/pattern" />

    <android.support.constraint.Guideline
        android:id="@+id/hor_mid_constraint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".1" />

    <RelativeLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/hor_mid_constraint"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="@dimen/splash_logo_size"
            android:layout_height="@dimen/splash_logo_size"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo" />

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:elevation="1dp"
            android:indeterminateDrawable="@drawable/progress"
            android:visibility="visible" />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo"
            android:layout_marginLeft="@dimen/google_margin_vertical"
            android:layout_marginRight="@dimen/google_margin_vertical"
            android:layout_marginTop="@dimen/splash_google_top_margin"
            android:visibility="gone" />

        <TextView
            android:id="@+id/sign_in_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sign_in_google"
            android:layout_marginLeft="@dimen/google_margin_vertical"
            android:layout_marginRight="@dimen/google_margin_vertical"
            android:layout_marginTop="@dimen/splash_desc_top_margin"
            android:fontFamily="sans-serif"
            android:text="@string/login_desc"
            android:textAlignment="center"
            android:textColor="@color/dark"
            android:textSize="@dimen/splash_desc_font_size"
            android:visibility="gone" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>